while True:
    N = int(input())
    if N == 0 : break

    b = list(map(int, input().split()))
    cnt = 0
    while cnt <= 10000 :
        tri_num = True
        if b[0] != 1 : tri_num = False
        for i in range( 1, len(b) ) :
            if b[i] != b[i - 1] + 1 :
                tri_num = False
                break
        if tri_num : break

        new_column = len(b)
        b_tmp = []
        for i in b :
            if i > 1 : b_tmp.append(i - 1)
        b = b_tmp
        b.append(new_column)

        cnt += 1
    if cnt <= 10000 : print(cnt)
    else : print(-1)
    
