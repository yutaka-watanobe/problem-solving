#include<stdio.h>
#include<string.h>

int main(){
  int n, t, i; scanf("%d", &n);
  char s[1025];  /* 巡回記録*/
  char form[51];  /* 列車の編成 */
  char tmp[51];  /* 列車の編成 */
  for ( t = 0; t < n; t++ ) {
    scanf("%s", s);
    form[0] = s[0]; form[1] = '\0';
    for ( i = 3; i < strlen(s); i += 3 ){
      if ( strchr(form, (int)s[i]) != NULL ) continue;
      if ( s[i - 1] == '>' ) snprintf(tmp, 51, "%s%c", form, s[i]);
      else snprintf(tmp, 51, "%c%s", s[i], form);
      strcpy(form, tmp);
    }
    printf("%s\n", form);
  }
  return 0;
}
